    "/nicomments/v1/delete-comments": {
      "post": {
        "tags": [
          "Comments"
        ],
        "summary": "Deletes comments.",
        "description": "Deletes one or more comments identified by their ids. Users can typically delete their own comments.\n            Users must have elevated permissions in order to delete others' comments. This API supports deletion of at\n            most 1000 comments per request.",
