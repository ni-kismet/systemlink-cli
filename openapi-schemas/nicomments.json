        "properties": {
          "message": {
            "minLength": 1,
            "type": "string",
            "description": "The comment message in the markdown format.",
            "example": "Hi <user:afbf16ae-1f8d-4422-b592-8b846316929c>,\\n\\nPlease schedule all the below *tests* now that the test system setup is **complete**.\\n\\n   1. Test 1\\n\\n 2. Test 2\\n\\nMoreover, these are a few points to be noted before scheduling Tests.\\n\\n * Point 1\\n\\n * Point 2\\n\\nFor further queries you could check this link: <https://www.ni.com/>\\n\\ncc:<user:e27dc41a-40a3-47f5-841e-0e4e17c3986c>"
          },
          "resourceType": {
            "minLength": 1,
            "type": "string",
            "description": "The type of resource that is being commented on.",
            "example": "testmonitor:Result"
          },
          "resourceId": {
            "minLength": 1,
            "type": "string",
            "description": "Unique id that represents the resource the comment belongs to.",
            "example": "afbf16ae-1f8d-4422-b592-8b846316929c"
          },
          "workspace": {
            "minLength": 1,
            "type": "string",
            "description": "The workspace id of the comment. This should match the workspace id of the related resource.",
            "example": "846e294a-a007-47ac-9fc2-fac07eab240e"
          },
          "resourceName": {
            "type": "string",
            "description": "The name of the resource the comment belongs to. ResourceName\nwill be added in the notification email to the mentioned users.",
            "nullable": true,
            "example": "My Test Program"
          },
          "resourceTypeName": {
            "type": "string",
            "description": "User-friendly name of the type of the resource that is being commented on.\nResourceTypeName will be added in the notification email to the mentioned users.",
            "nullable": true,
            "example": "Results"
          },
          "commentUrl": {
            "type": "string",
            "description": "Relative URL to the comment. CommentUrl will be added in the notification email to the mentioned users.",
            "nullable": true,
            "example": "testinsights/results/result/fff17de5-2a3a-4274-bdcb-09dad869f1f2/comments"
          },
          "mentionedUsers": {
            "type": "array",
            "items": {
