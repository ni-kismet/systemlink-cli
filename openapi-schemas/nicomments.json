              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/HttpError"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpError"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpError"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request."
          },
          "401": {
            "description": "Unauthorized."
          }
        }
      }
    },
    "/nicomments/v1/comments/{id}": {
      "patch": {
        "tags": [
          "Comments"
        ],
        "summary": "Update comment.",
        "description": "Updates the comment identified by the id. The user can update the comment message only for their own comments.\nThe user can add or remove a user mention while updating the comment.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of the comment.",
            "required": true,
            "schema": {
              "type": "string"
