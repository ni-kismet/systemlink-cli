{
  "openapi": "3.0.4",
  "info": {
    "title": "Routine Service",
    "description": "Creates and manages routines that respond to event triggers and execute actions.",
    "contact": {
      "name": "NI",
      "url": "https://www.ni.com/systemlink",
      "email": "support@ni.com"
    },
    "version": "2"
  },
  "servers": [
    {
      "url": "/niroutine",
      "description": "Routine Service API"
    }
  ],
  "paths": {
    "/niroutine/v2/routines": {
      "post": {
        "tags": [
          "Routines"
        ],
        "summary": "Create a new routine",
        "description": "Creates a new routine with the specified configuration, including an event trigger and actions to execute when the event occurs.",
        "operationId": "CreateRoutine",
        "requestBody": {
          "description": "Information about the routine to create.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateRoutineRequest"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "headers": {
              "Location": {
                "description": "URI of the created routine",
                "schema": {
                  "type": "string"
                },
                "example": "/niroutine/v2/routines/5afb2ce3741fe11d88838cc9"
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreatedResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid input data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Insufficient permissions",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "409": {
            "description": "Conflict - Routine name already exists",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "default": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Routines"
        ],
        "summary": "Query routines based on a filter",
        "description": "Queries routines based on the provided parameters of event type and enabled status.",
        "operationId": "QueryRoutines",
        "parameters": [
          {
            "name": "enabled",
            "in": "query",
            "description": "Returns only routines with matching enabled field if this value is set",
            "schema": {
              "type": "boolean",
              "example": false
            },
            "example": false
          },
          {
            "name": "eventType",
            "in": "query",
            "description": "Returns only routines with matching event type field if this value is set",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/QueryRoutinesResponse"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request - Invalid query parameters",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "default": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          }
        }
      }
    },
    "/niroutine/v2/routines/{id}": {
      "delete": {
        "tags": [
          "Routines"
        ],
        "summary": "Delete a routine by id",
        "description": "Deletes the routine with the specified ID. This operation will remove the routine and its associated configuration from the system.",
        "operationId": "DeleteRoutine",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Unique ID of a routine",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No content"
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found - Routine not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "default": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Routines"
        ],
        "summary": "Get a routine by ID",
        "description": "Retrieves the routine with the specified ID, including its configuration and status.",
        "operationId": "GetRoutine",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Unique ID of a routine",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HttpRoutine"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found - Routine not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "default": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": [
          "Routines"
        ],
        "summary": "Update the routine with the given id.",
        "description": "Updates the routine with the specified ID using the provided configuration. This operation allows modification of the routine's event trigger and actions.",
        "operationId": "UpdateRoutine",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Unique ID of a routine",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "description": "The update request containing the new routine configuration.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateRoutineRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request - Invalid input data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid API key",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found - Routine not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          },
          "default": {
            "description": "Internal Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/BaseResponse"
                }
              }
            }
          }
        }
      }
    },
    "/niroutine": {
      "get": {
        "tags": [
          "Versioning"
        ],
        "summary": "API information",
        "description": "Returns information about API versions and available operations.",
        "operationId": "RootEndpoint",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiInfo"
                }
              }
            }
          }
        }
      }
    },
    "/niroutine/v2": {
      "get": {
        "tags": [
          "Versioning"
        ],
        "summary": "V2 API information",
        "description": "Returns available operations for the V2 API.",
        "operationId": "RootEndpointV2",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/V2ApiInfo"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "ApiInfo": {
        "required": [
          "v2"
        ],
        "type": "object",
        "properties": {
          "v2": {
            "$ref": "#/components/schemas/V2ApiInfo"
          }
        },
        "additionalProperties": false,
        "description": "API information"
      },
      "BaseResponse": {
        "type": "object",
        "properties": {
          "error": {
            "$ref": "#/components/schemas/HttpError"
          }
        },
        "additionalProperties": false
      },
      "CreateRoutineRequest": {
        "required": [
          "actions",
          "event",
          "name"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "The name of the routine.",
            "example": "My routine"
          },
          "description": {
            "maxLength": 500,
            "minLength": 0,
            "type": "string",
            "description": "The description of the routine.",
            "nullable": true,
            "example": "My routine description"
          },
          "enabled": {
            "type": "boolean",
            "description": "If `true`, the routine will be enabled upon creation."
          },
          "workspace": {
            "type": "string",
            "description": "The ID of the workspace in which to create the routine.\nIf not specified, it will be created in the default workspace.",
            "nullable": true,
            "example": "f94b178e-288c-4101-afb1-833992413aa7"
          },
          "event": {
            "$ref": "#/components/schemas/HttpEventDefinition"
          },
          "actions": {
            "maxItems": 10,
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HttpActionDefinition"
            },
            "description": "The actions that occur when a routine is triggered."
          }
        },
        "additionalProperties": false,
        "description": "Contains information about the routine to create."
      },
      "CreatedResponse": {
        "required": [
          "id"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Response for successfully creating a routine.",
            "example": "5afb2ce3741fe11d88838cc9"
          }
        },
        "additionalProperties": false,
        "description": "Response for successfully creating a routine."
      },
      "HttpActionDefinition": {
        "required": [
          "type"
        ],
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["ALARM", "TAG_VALUE_CHANGE", "NOTIFICATION"],
            "example": "ALARM"
          },
          "triggers": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "Greater than 100"
            }
          },
          "configuration": {
            "type": "object",
            "example": {
              "severity": 1,
              "condition": "Greater than 100",
              "displayName": "Example alarm display name",
              "description": "Example description of the alarm."
            }
          }
        },
        "additionalProperties": false,
        "description": "The definition for an action that occurs when a routine is triggered.",
        "example": {
          "type": "ALARM",
          "triggers": [
            "Greater than 100"
          ],
          "configuration": {
            "severity": 1,
            "condition": "In range [75, 90]",
            "displayName": "Example alarm display name",
            "description": "Example description of the alarm."
          }
        }
      },
      "HttpError": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "code": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "message": {
            "type": "string"
          },
          "resourceType": {
            "type": "string",
            "nullable": true
          },
          "resourceId": {
            "type": "string",
            "nullable": true
          },
          "args": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "innerErrors": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HttpError"
            }
          }
        },
        "additionalProperties": false
      },
      "HttpEventDefinition": {
        "required": [
          "triggers",
          "type"
        ],
        "type": "object",
        "properties": {
          "type": {
            "maxLength": 50,
            "minLength": 1,
            "type": "string",
            "enum": ["TAG", "ALARM", "SCHEDULE", "SYSTEM"],
            "example": "TAG"
          },
          "triggers": {
            "maxItems": 10,
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HttpTriggerCondition"
            }
          }
        },
        "additionalProperties": false,
        "description": "The definition for the event that triggers the routine."
      },
      "HttpRoutine": {
        "required": [
          "actions",
          "created",
          "createdBy",
          "description",
          "enabled",
          "event",
          "id",
          "name",
          "updated",
          "updatedBy",
          "workspace"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "5afb2ce3741fe11d88838cc9"
          },
          "workspace": {
            "type": "string",
            "example": "f94b178e-288c-4101-afb1-833992413aa7"
          },
          "name": {
            "type": "string",
            "example": "Routine name"
          },
          "description": {
            "type": "string",
            "example": "Routine description"
          },
          "enabled": {
            "type": "boolean",
            "example": false
          },
          "createdBy": {
            "type": "string",
            "example": "User1"
          },
          "updatedBy": {
            "type": "string",
            "example": "User2"
          },
          "created": {
            "type": "string",
            "format": "date-time",
            "example": "2019-01-14T23:15:53.7270539Z"
          },
          "updated": {
            "type": "string",
            "format": "date-time",
            "example": "2019-01-14T23:15:53.7270539Z"
          },
          "event": {
            "$ref": "#/components/schemas/HttpEventDefinition"
          },
          "actions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HttpActionDefinition"
            }
          }
        },
        "additionalProperties": false,
        "description": "A routine instance."
      },
      "HttpTriggerCondition": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Greater than 100"
          },
          "configuration": {
            "type": "object",
            "example": {
              "path": "*.CPU",
              "type": "DOUBLE",
              "comparator": "IN_RANGE",
              "thresholds": [
                "75",
                "90"
              ]
            }
          }
        },
        "additionalProperties": false,
        "description": "Defines a single condition for an NationalInstruments.RoutineService.PluginBased.Model.Api.HttpEventDefinition",
        "example": {
          "name": "Greater than 100",
          "configuration": {
            "path": "*.CPU",
            "type": "DOUBLE",
            "comparator": "IN_RANGE",
            "thresholds": [
              "75",
              "90"
            ]
          }
        }
      },
      "Operation": {
        "required": [
          "available",
          "version"
        ],
        "type": "object",
        "properties": {
          "available": {
            "type": "boolean",
            "description": "Whether the operation is currently available.",
            "example": true
          },
          "version": {
            "type": "integer",
            "description": "The version of the available operation.",
            "format": "int32",
            "example": 1
          }
        },
        "additionalProperties": false,
        "description": "An operation provided by the API. Each route functionality is covered by an operation.\nAs new functionality is added to an operation, the `version` is incremented."
      },
      "QueryRoutinesResponse": {
        "required": [
          "routines"
        ],
        "type": "object",
        "properties": {
          "routines": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HttpRoutine"
            },
            "description": "The collection of returned routines."
          }
        },
        "additionalProperties": false,
        "description": "Model of a response to a request to query routines."
      },
      "UpdateRoutineRequest": {
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string",
            "description": "The name of the routine.",
            "nullable": true,
            "example": "My routine"
          },
          "description": {
            "maxLength": 500,
            "minLength": 0,
            "type": "string",
            "description": "The description of the routine.",
            "nullable": true,
            "example": "My routine description"
          },
          "enabled": {
            "type": "boolean",
            "description": "If `true`, the routine will be enabled upon creation.",
            "nullable": true
          },
          "workspace": {
            "type": "string",
            "description": "The ID of the workspace in which to create the routine.\nIf not specified, it will be created in the default workspace.",
            "nullable": true,
            "example": "f94b178e-288c-4101-afb1-833992413aa7"
          },
          "event": {
            "$ref": "#/components/schemas/HttpEventDefinition"
          },
          "actions": {
            "maxItems": 10,
            "minItems": 1,
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/HttpActionDefinition"
            },
            "description": "The actions that occur when a routine is triggered.",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "description": "Contains information about the routine to update."
      },
      "V2ApiInfo": {
        "required": [
          "operations"
        ],
        "type": "object",
        "properties": {
          "operations": {
            "$ref": "#/components/schemas/V2Operations"
          }
        },
        "additionalProperties": false,
        "description": "API information for the /v2 HTTP API."
      },
      "V2Operations": {
        "required": [
          "createRoutines",
          "deleteRoutines",
          "listRoutines",
          "modifyRoutines"
        ],
        "type": "object",
        "properties": {
          "createRoutines": {
            "$ref": "#/components/schemas/Operation"
          },
          "deleteRoutines": {
            "$ref": "#/components/schemas/Operation"
          },
          "listRoutines": {
            "$ref": "#/components/schemas/Operation"
          },
          "modifyRoutines": {
            "$ref": "#/components/schemas/Operation"
          }
        },
        "additionalProperties": false,
        "description": "The operations available in the routes provided by the /v2 HTTP API."
      }
    },
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "description": "API Key needed to access the endpoints. x-ni-api-key header must be provided with the API key value.",
        "name": "x-ni-api-key",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ],
  "tags": [
    {
      "name": "Routines"
    },
    {
      "name": "Versioning"
    }
  ]
}
